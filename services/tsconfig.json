  //   "esModuleInterop": true,
  //   "emitDecoratorMetadata": true,
  //   "experimentalDecorators": true,
  //   "module": "commonjs",
  //   "moduleResolution": "node",
  //   "paths": {
  //     "#root/*": ["./src/*"]
  //   },
  //   "outDir": "./dist",
  //   "strict": true,
  //   "target": "ES6",
  //   "types": ["node"]
  // }
}
